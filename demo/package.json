{
  "name": "ngx-validate-demo",
  "version": "0.0.0",
  "license": "MIT",
  "description": "Demo app for ngx-validate",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "build:doc": "cd ../ && gulp build:doc",
    "build:prod": "ng build --prod ",
    "build:client-and-server-bundles": "ng build --prod &&  ng run ngx-validate:server:production",
    "build:prerender": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:prerender",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "compile:server": "tsc -p server.tsconfig.json",
    "deploy:firebase": "npm run build:prod && npm run build:doc && firebase deploy",
    "e2e": "ng e2e",
    "generate:prerender": "cd dist && node prerender",
    "lint": "ng lint",
    "test": "ng test",
    "postinstall": "npm run link",
    "link": "npm link ngx-validate",
    "start": "ng serve",
    "serve:prod": "ng serve --prod",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^7.1.4",
    "@angular/http": "^7.1.4",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^7.1.4",
    "@ng-bootstrap/ng-bootstrap": "4.0.1",
    "@stackblitz/sdk":"^1.2.0",
    "bootstrap": "4.2.1",
    "core-js": "^2.5.4",
    "font-awesome": "^4.7.0",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26",
    "@angular/platform-server": "^6.0.0"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^6.0.0",
    "@angular-devkit/build-angular": "~0.11.4",
    "@angular/cli": "~7.1.4",
    "@angular/language-service": "^7.1.4",
    "@angularclass/hmr": "~2.1.3",
    "@types/node": "10.12.18",
    "codelyzer": "^4.0.1",
    "@types/jest": "23.3.10",
    "jest": "23.6.0",
    "jest-preset-angular": "6.0.2",
    "protractor": "~5.4.2",
    "ts-node": "~7.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "ts-loader": "~5.3.2",
    "reflect-metadata": "~0.1.10",
    "@compodoc/gulp-compodoc": "0.0.10",
    "commitplease": "3.2.0",
    "conventional-github-releaser": "3.1.2",
    "greenkeeper-lockfile": "1.15.1",
    "gulp-coveralls": "0.1.4",
    "travis-status": "3.0.1",
    "del": "3.0.0",
    "gulp": "4.0.0",
    "gulp-git": "2.8.0",
    "gulp-hub": "0.8.0",
    "gulp-bump": "3.1.1",
    "gulp-file": "0.4.0",
    "gulp-conventional-changelog": "2.0.9",
    "angular-cli-ghpages": "0.5.3",
    "run-sequence": "2.2.1",
    "lodash": "4.17.11",
    "yargs": "12.0.5",
    "ansi-colors": "3.2.3",
    "fancy-log": "1.3.3",
    "webpack-cli": "^3.1.2",
    "express": "^4.16.2",
    "@nguniversal/common": "^7.0.2",
    "@nguniversal/express-engine": "^7.0.2",
    "@nguniversal/module-map-ngfactory-loader": "^7.0.2"
  },
    "jest": {
      "preset": "jest-preset-angular",
      "coverageReporters": [ "lcov", "text" ],
